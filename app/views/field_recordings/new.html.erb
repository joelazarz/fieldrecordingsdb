<div class="container">

<div class="fr-header">
    New Field Recording
</div>
                
<div class="fr-form">

<%= form_for @field_recording do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>
<%= f.fields_for @location do |location| %>
    <%= location.label :name, "Location" %><br>
    <%= location.text_field :name %><br><br>
<%end%>
<%= f.fields_for @artist do |artist| %>
    <%= artist.label :name, "Artist" %><br>
    <%= artist.text_field :name %><br><br>
<%end%>
<%= f.label :date %><br>
<%= f.date_select :date %><br><br>
<%= f.label :description %><br>
<%= f.text_area :description %><br><br>
<%= f.label "Photo" %><br>
<%= f.file_field :avatar %>
<%= f.label "Recording" %>
<%= f.file_field :recording %><br><br>
<%= f.submit "Submit" %><br>
<% end %>
</div>

</div>
