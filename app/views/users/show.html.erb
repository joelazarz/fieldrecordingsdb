<div class="container">

<div class="fr-header">
<%= @user.username %>
</div>




<div class="user-follows">
    <div class="stat-link">
    <%= link_to "Site statistics", stats_path %>
</div>
<br>
    Artists you follow
    <ul>
        <% if @follows.length == 0  %>
        <%= link_to "+ no follows yet; find an artist", artists_path %>
        <% else %>
        <% @follows.each do |f| %>
        <li> <%= link_to f.artist.name, artist_path(f.artist_id) %> </li>
        <% end %>
        <% end %>
    </ul>
</div>

<div class="user-comments">
 <div class="new-fr">
<% if user_logged_in?%> 
<%= link_to "New Field Recording", new_field_recording_path%> 
<% end %>
<br>
<br>
</div>
    Comments on Field Recordings
    <ul>
        <% if @comments.length == 0 %>
        <%= link_to "+ no comments yet; find a field recording", field_recordings_path %>
        <% else %>
        <% @comments.each do |c| %>
        <li> <%= link_to c.field_recording.title + " - " + c.comment, field_recording_path(c.field_recording) %>
            <br>

            <%= link_to "edit comment", edit_comment_path(c.id) %>
            <%= link_to "delete comment", c, method: :delete , data: {:confirm => "Delete comment?" } ,
            :title => "Delete #{c.comment}"%>
        </li>
        <% end %>
        <% end %>
    </ul>
</div>


</div>