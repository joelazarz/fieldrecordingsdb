<div class="container">

<div class="new-artist-header">
Add comment to <div class="recording-title"><%= @field_recording.title %></div>    
</div> 

<div class="comment-form">
<%= form_for @comment do |f| %>
<%= f.label :comment %><br>
<%= f.text_area :comment%><br><br>
<%= f.hidden_field :user_id, :value => @user_id %>
<%= f.hidden_field :field_recording_id, :value => @field_recording.id %>
<%= f.submit "Submit" %>
<% end %>
</div>

</div>